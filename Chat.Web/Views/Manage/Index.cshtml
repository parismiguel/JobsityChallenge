@model Chat.Web.Models.IndexViewModel
@{
    ViewBag.Title = "Gestionar Perfil";
}

<h2>@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Gestione la configuración de su usuario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Contraseña:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Cambiar contraseña", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Crear contraseña", "SetPassword")
            }
            ]
        </dd>
    </dl>

    <a href="/">Regresar a la sala de chats</a>
</div>
